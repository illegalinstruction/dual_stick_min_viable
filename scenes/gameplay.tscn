script/source = "extends Spatial

const MIN_CAMERA_HEFT : float = 0.0;
const MAX_CAMERA_HEFT : float = 0.96;

#-------------------------------------------------------------------------------
# adjust to make the camera follow the player more tightly or more loosely
export var CAMERA_HEFT : float = 0.9;

#-------------------------------------------------------------------------------

func _ready():
	CAMERA_HEFT = clamp(CAMERA_HEFT, MIN_CAMERA_HEFT, MAX_CAMERA_HEFT);

#-------------------------------------------------------------------------------

func _process(_ignored):
	var x_dist = self.position.x - $\"../PLAYER\".position.x;
	var z_dist = self.position.z - $\"../PLAYER\".position.z;
	
	var x_move = (1.0 - CAMERA_HEFT) * x_dist;
	var z_move = (1.0 - CAMERA_HEFT) * z_dist;
	
	self.position.x -= x_move;
	self.position.z -= z_move;
	return;
"

